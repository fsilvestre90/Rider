<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sequence 1 timer"
      tools:layout_constraintTop_creator="1"
      android:layout_marginStart="16dp"
      android:layout_marginTop="28dp"
      tools:layout_constraintLeft_creator="1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="TextView"
      tools:text="Sequence 2 Timer"
      tools:layout_constraintBottom_creator="1"
      app:layout_constraintBottom_toTopOf="@+id/seq2_edit_text"
      android:layout_marginStart="16dp"
      tools:layout_constraintLeft_creator="1"
      android:layout_marginBottom="9dp"
      app:layout_constraintLeft_toLeftOf="parent"
      />

  <EditText
      android:id="@+id/seq1_edit_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="number"
      android:hint="Time (in seconds)"
      tools:layout_constraintTop_creator="1"
      tools:layout_constraintRight_creator="1"
      app:layout_constraintRight_toRightOf="@+id/textView2"
      android:layout_marginTop="14dp"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      tools:layout_constraintLeft_creator="1"
      app:layout_constraintLeft_toRightOf="@+id/textView2"
      />

  <EditText
      android:id="@+id/seq2_edit_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="number"
      android:hint="Time (in seconds)"
      tools:layout_constraintTop_creator="1"
      tools:layout_constraintRight_creator="1"
      app:layout_constraintRight_toRightOf="@+id/seq1_edit_text"
      android:layout_marginTop="57dp"
      app:layout_constraintTop_toBottomOf="@+id/seq1_edit_text"
      tools:layout_constraintLeft_creator="1"
      app:layout_constraintLeft_toLeftOf="@+id/seq1_edit_text"
      app:layout_constraintHorizontal_bias="0.0"
      />
  <Button
      android:id="@+id/save_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="SAVE"
      tools:layout_constraintTop_creator="1"
      tools:layout_constraintRight_creator="1"
      tools:layout_constraintBottom_creator="1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="202dp"
      tools:layout_constraintLeft_creator="1"
      android:layout_marginBottom="202dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/seq1_edit_text"
      app:layout_constraintHorizontal_bias="0.5"
      />


</android.support.constraint.ConstraintLayout>